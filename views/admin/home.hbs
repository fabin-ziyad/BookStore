<div class="container">
	<div class="row">
		<div class="col-md-12">
			<a href="/admin/admin-logout" class="btn btn-primary">Logout</a>
		</div>
	</div>
  <h2 class="text-center mt-3 header-title">Add Book</h2>
    <div class="row">
        <div class="col-md-12">
            <div class="form-wrapper">
            <form action="/admin/Addbook" method="post">
    <div class="row mt-4">
        <div class="col-md-6">
  <div class="form-group ">
     <label class="form-label" >Book Name</label>
    <input type="text" class="form-control" name="bookName" required>
  </div>
        </div>
        <div class="col-md-6">
            <div class="form-group ">
    <label class="form-label" >Image Url</label>
    <input type="url" class="form-control" name="imageUrl" required>
  </div>
        </div>
    </div>
   
  
  <div class="row mt-4">
        <div class="col-md-6">
  <div class="form-group ">
     <label class="form-label" >Author</label>
    <input type="text" class="form-control" name="bookAuthor" required>
  </div>
        </div>
        <div class="col-md-6">
            <div class="form-group ">

    <label class="form-label" >Pages</label>
    <input type="number" class="form-control" name="bookPages" required>
  </div>
        </div>
    </div>
    <div class="row mt-4 mb-5">
        <div class="col-md-6">
  <div class="form-group ">
     <label class="form-label" >Price</label>
    <input type="text" class="form-control" name="bookPrice" oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" required>
  </div>
        </div>
        </div> 
    <div class="row mb-3">
        <div class="col-md-6"></div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Add Book</button>
        </div>
    </div>
</form>
</div>
        </div>
    </div>
        <div class="row">
            <table class="table mt-3 p-3" id="books">
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Book</th>
      <th scope="col">Author</th>
      <th scope="col">Pages</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
      {{#each Response}}
    <tr>
      <td><img src="{{this.imageUrl}}" alt="" srcset="" style="width: 80px;height:80px;"></td>
      <td scope="row">{{this.bookName}}</td>
      <td>{{this.bookAuthor}}</td>
      <td>{{this.bookPages}}</td>
      <td>{{this.bookPrice}}</td>
      <td>
        
														<div class="btn-group">
															<a href="javascript:0" type="button"
															class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#info{{this._id}}">Info</a>
														</div>
														<div class="btn-group">
															<a href="javascript:0" type="button"
															class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#Edit{{this._id}}">Edit</a>
														</div>
													
      </td>
      <td>
                      									<label class="switch mt-2">
															<label class="switch mt-2">
															<input type="checkbox"  id="book{{this._id}}" onchange="book('{{this._id}}')" checked>
															<span class="slider round"></span>
														</label>
      </td>
    </tr>
    <!-- Category Info Modal -->
					<div class="modal fade modal-contact-detail" id="info{{this._id}}" tabindex="-1" aria-hidden="true">
						<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
							<div class="modal-content">
								<div class="modal-header justify-content-end border-bottom-0">
									<button type="button" class="btn-edit-icon" data-bs-dismiss="modal"
										aria-label="Close">
									</button>
									<div class="dropdown">
										<button class="btn-dots-icon" type="button" id="dropdownMenuButton"
											data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										</button>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="#">Action</a>
											<a class="dropdown-item" href="#">Another action</a>
											<a class="dropdown-item" href="#">Something else here</a>
										</div>
									</div>
									<button type="button" class="btn-close-icon" data-bs-dismiss="modal" aria-label="Close">
										<i class="mdi mdi-close"></i>
									</button>
								</div>
								<div class="modal-body pt-0">
									<div class="row no-gutters">
										<div class="col-md-6">
											<div class="profile-content-left px-4">
												<div class="text-center widget-profile px-0 border-0">
													<div class="card-img mx-auto rounded-circle">
														<img src="{{this.imageUrl}}" alt="user image">
													</div>	
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="contact-info px-4">
												<h4 class="text-dark mb-1">More Info</h4>
												<p class="text-dark font-weight-medium pt-4 mb-2">Book Name</p>
												<h6 class="font-weight-bold text-dark">{{this.bookName}}</h6>
												<p class="text-dark font-weight-medium pt-4 mb-2">Author</p>
												<h6>{{this.bookAuthor}}</h6>
												<p class="text-dark font-weight-medium pt-4 mb-2">Price</p>
												<h6 class="ec-Ac-status">{{this.bookPages}}</h6>
											<p class="text-dark font-weight-medium pt-4 mb-2">Price</p>
												<h6 class="ec-Ac-status">{{this.bookPrice}}</h6>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
              <!-- Category Info Modal End -->



                         <!--EDIT SUB CATEGORY !-->
			<div class="modal fade modal-add-contact" id="Edit{{this._id}}" tabindex="-1" role="dialog" aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
					<div class="modal-content">
						<form action="/admin/Update" method="post">
							<input type="text" value="{{this._id}}" name="Matchid"  hidden>
								<div class="modal-header px-4">
									<h5 class="modal-title" id="exampleModalCenterTitle">Edit Main Category</h5>
								</div>
								<div class="modal-body px-4">
									<div class="row mb-2 mt-4">
										<div class="col-lg-6">
											<div class="form-group">
												<label for="MainCategory">Book Name</label>
												<input type="text" class="form-control" name="BookName" value="{{this.bookName}}"  >
											</div>
										</div>
										<div class="col-lg-6">
											<div class="form-group">
												<label for="firstName">Image Url</label>
												<input type="text" class="form-control" name="ImageUrl" value="{{this.imageUrl}}" name="UpdatedSubCat" required>
											</div>
										</div>
									</div>
									<div class="row mb-2 mt-4">
										<div class="col-lg-6">
											<div class="form-group">
												<label for="MainCategory">Book Author</label>
												<input type="text" class="form-control" name="BookAuthor" value="{{this.bookAuthor}}"  >
											</div>
										</div>
										<div class="form-group col-lg-6">
										
												<div class="col-lg-6">
												<label for="MainCategory">Book Page</label>
												<input type="text" class="form-control" name="BookPage" value="{{this.bookAuthor}}"  >
												</div>
											</div>
									</div>
									<div class="row">
                    <div class="col-lg-6">
                      <label for="MainCategory">Book Price</label>
												<input type="text" class="form-control" name="BookPrice" value="{{this.bookPrice}}"  >
                    </div>
                  </div>
								    <div class="row">
									    <div class="col-md-12">
									<div class="modal-footer px-4">
										<button type="button" class="btn btn-secondary btn-pill"
											data-bs-dismiss="modal">Cancel</button>
										<button type="submit" class="btn btn-primary ">Update</button>
									</div>
									</div>
									</div>

								</div>
						</form>
					</div>
				</div>
			</div>
      {{/each}}
  </tbody>
</table>
        </div>
    </div>


